
<div id="recipes">
  <div class="recipe">
    <br>
    <h1>Welcome to your Cookbook!</h1>
    <br>
    <h3>You have a total of <%= @cookbook.size %> recipes in your cookbook: </h3>

<% @cookbook.each_with_index do |recipe, index| %>
<div class="card" style="background: linear-gradient(to bottom right, rgb(<%= rand(120..200) %>,<%= rand(0..50)%>,<%= rand(0..50)%>) , rgb(<%= rand(180..255) %>,<%= rand(0..100)%>,<%= rand(0..100)%>));">
  <div class="card-category"><%= recipe.difficulty %></div>
  <div class="card-description">
    <h2><%= recipe.name %>   <%= recipe.time %></h2>
    <p><%= recipe.description %></p>
  </div>
  <a class="card-link" href="delete/<%= index %>">Delete></a>
</div>
<br>
<% end %>
</div>
</div>
